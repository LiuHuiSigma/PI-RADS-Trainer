@import "{ohif:design}/app"

.measurementTableView

  .custom-textarea
    margin-top: 20px;

  .custom-textarea label
    theme('color', '$defaultColor')

  textarea
    resize: none
    background-color: rgba(0,0,0,0)
    theme('border-color', '$activeColor')
    color: white

  .report-area
    theme('background-color', '$uiGrayDarker')
    margin-top: 2px
    padding: 10px 0

  .btn
    theme('background-color', '$activeColor')
    theme('border', '1px solid $uiBorderColorActive')
    color: #000
    display: table
    margin: 0 auto

  #feedback-section
    margin-right: 10px;
    margin-left: 10px;
    width: 100%
    height: 100%
    overflow-y: scroll
    &::-webkit-scrollbar-track
        -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
        -moz-box-shadow inset 0 0 6px rgba(0,0,0,0.3)
        box-shadow inset 0 0 6px rgba(0,0,0,0.3)
        background-color rgba(0,0,0,1)
    &::-webkit-scrollbar
        width 14px
        background-color #F5F5F5
    &::-webkit-scrollbar-thumb
        border-radius 10px
        background-color #12373D
    p
    h2
    h3
    h4
      theme('color', '$defaultColor')
    pre
      font-family: Roboto;
      font-size: 18px;
      background: none
      border: none
      theme('color', '$defaultColor')
      overflow-x: hidden
      white-space: pre-wrap
      word-wrap: break-word
      word-break: keep-all

  .report-area
    margin-top: 2px
    padding: 10px 0

    .type
      theme('color', '$textSecondaryColor')
      font-size: 16px
      font-weight: 300
      line-height: $headerRowHeight
      padding: 0 10px
      text-align: left

  .message-area
    margin-top: 2px
    padding: 10px 0

    .type
      theme('color', '$textSecondaryColor')
      font-size: 16px
      font-weight: 300
      line-height: $headerRowHeight
      padding: 0 10px
      text-align: left
